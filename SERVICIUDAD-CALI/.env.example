# Variables de entorno para Docker Compose
# Copiar este archivo a .env y ajustar los valores segun el ambiente

# PostgreSQL Configuration
POSTGRES_DB=serviciudad_db
POSTGRES_USER=serviciudad_user
POSTGRES_PASSWORD=serviciudad_pass

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# Java Configuration
JAVA_OPTS=-Xms256m -Xmx512m -XX:+UseG1GC

# Archivo de consumos de energia
ENERGIA_ARCHIVO_PATH=/app/data/consumos_energia.txt

# Logging
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_SERVICIUDAD=INFO
